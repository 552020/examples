type SchnorrAlgotirhm = variant {bip340secp256k1; ed25519};

service : {
  public_key : (SchnorrAlgotirhm) -> (variant { Ok: record { public_key_hex: text; }; Err: text });
  sign : (text, SchnorrAlgotirhm) -> (variant { Ok: record { signature_hex: text; }; Err: text });
  verify : (text, text, text, SchnorrAlgotirhm) -> (variant { Ok: record { is_signature_valid: bool; }; Err: text });
}
